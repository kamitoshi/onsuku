<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <div class="field pa-40">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メースアドレス", class:"form-control" %>
        </div>

        <div class="field pa-40">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions wid-50 ma-a">
          <%= f.submit "ログイン", class:"btn btn-success btn-lg wid-100" %>
        </div>
      <% end %>

      <%= render "teachers/shared/links" %>
    </div>
  </div>
</div>